<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.5.xsd">
	<header>
		<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
		
		<title lang="en">Message System Plugin 4 Ajax Tag Board - italian</title>
		
		<description lang="en">If a user made a new post (reply or a topic), a new shout is automatically sent on Tag Board</description>
		
		<author-group>
			<author>
				<realname>Vincenzo Langella</realname>
				<username>bx67212</username>
				<homepage>http://bx67212.netsons.org</homepage>
			</author>
		</author-group>
		
		<mod-version>1.2</mod-version>
		
		<installation>
			<level>easy</level>
			<time>60</time>
			<target-version>3.0.7</target-version>
		</installation>
	</header>

	<action-group>
		<open src="language/it/common.php">
			<edit>
				<find><![CDATA[	'YOU_NO_NEW_PM'		=> 'Nessun nuovo messaggio privato.',]]></find>
				<action type="after-add"><![CDATA[	'TB_NEW_POLL' 				=> 'Ho aperto un nuovo sondaggio',
	'TB_NEW_TOPIC' 				=> 'Ho aperto un nuovo topic',
	'TB_NEW_POST' 				=> 'Ho risposto al topic',
	'TB_NEW_FORUM' 				=> 'nel forum',]]></action>
			</edit>
		</open>
	</action-group>
</mod>